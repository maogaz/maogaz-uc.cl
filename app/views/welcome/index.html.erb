<h1>Bienvenido a la app de Rick and Morty</h1>
<p>Por Mario Ogaz</p>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :motivo, 'Busqueda '%>
            <%= text_field_tag :motivo, nil, placeholder: 'Ejemplo: Morty', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>

<h1>Episodios</h1>
<% @result1['results'].each do |episode| %>
    <hr>
    <h2> Nombre: <%= link_to episode['name'], episode_index_path(:motivo => episode['id'])%></h2>
    <h3> Fecha de transmicion: <%=episode['air_date']%></h3>
    <h3> Codigo episodio: <%=episode['episode']%></h3>
    </hr>
<% end %>

